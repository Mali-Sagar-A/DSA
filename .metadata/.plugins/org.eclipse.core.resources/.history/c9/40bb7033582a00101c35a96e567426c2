package Recursion;

public class Pattern {
	
	public static void Pattern1(int n)
	{
		if(n<1)
		{
			return;
		}
		StarPattern(n);
		Pattern1(n-1);
		System.out.println(" ");
//		for(int i=1;i<=n;i++)
//		{
//			System.out.print("* ");
//		}
		return;
		
	}
	
	public static void Pattern2(int n)
	{
		if(n<1)
		{
			return;
		}
		
		System.out.println(" ");
//		for(int i=1;i<=n;i++)
//		{
//			System.out.print("* ");
//		}
		Pattern2(n-1);
		StarPattern(n);
		return;
		
	}
	
	public static void StarPattern(int n)
	{
		if(n<1)
		{
			return ;
		}
		//System.out.println(" ");
		System.out.print("* ");
		StarPattern(n-1);
		
		
	}
	
	public static void main(String[] args) {
		//Pattern.Pattern1(10);
		//Pattern.Pattern2(10);
		
		//Pattern.StarPattern(5);
	}
}
