package Sorting;

public class SortingAlgorithm {

	public void bubble_sort(int arr[])
	{
		
		int i,j,temp;
		
		for(i=arr.length-1;i>=0;i--)
		{
			for(j=0;j<=i-1;j++)
			{
				if(arr[j]>arr[j+1])
				{
					temp=arr[j];
					arr[j]=arr[j+1];
					arr[j+1]=temp;
				}
			}
		}
		
	}
	
	public void Display()
	{
		for(int i:arr)
		{
			System.out.println(i+" ");
		}
	}
}
